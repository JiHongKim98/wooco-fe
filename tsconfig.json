{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    },
    "types": ["kakao.maps.d.ts"]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "*.tsx",
    "*.ts",
    ".next/types/**/*.ts",
    "tsconfig.d.ts",
    "next.config.js",
    "src/views/detail-comment",
    "src/shared/ui/ProfileImage",
    "src/widgets/course-plan-detail-layout",
    "src/widgets/floating-write-btn"
  ],
  "exclude": ["node_modules"]
}
